    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.3",
    "if-env": "^1.0.4",
    "moment": "^2.24.0",
    "mongoose": "^5.9.6",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
